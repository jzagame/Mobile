<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/room1_icon"
        android:layout_margin="5px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10px"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/img_pin"
        app:layout_constraintStart_toStartOf="@+id/img_pin"
        android:text="Heritage Apartment" />

    <ImageView
        android:id="@+id/img_pin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        app:layout_constraintTop_toTopOf="@+id/img_icon"
        app:layout_constraintBottom_toBottomOf="@+id/img_icon"
        app:layout_constraintStart_toEndOf="@+id/img_icon"
        app:srcCompat="@drawable/pin" />

    <TextView
        android:id="@+id/txt_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        app:layout_constraintTop_toTopOf="@+id/img_pin"
        app:layout_constraintBottom_toBottomOf="@+id/img_pin"
        app:layout_constraintStart_toEndOf="@+id/img_pin"
        android:text="Old Town Area" />

    <ImageView
        android:id="@+id/img_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="70px"
        android:minHeight="70px"
        app:layout_constraintStart_toStartOf="@+id/img_pin"
        app:layout_constraintTop_toBottomOf="@+id/img_pin"
        app:srcCompat="@drawable/rate" />

    <TextView
        android:id="@+id/txt_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/img_rate"
        android:layout_marginLeft="20px"
        android:textColor="@color/blue"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/img_rate"
        app:layout_constraintStart_toEndOf="@id/img_rate"
        android:text="3 stars" />

    <TextView
        android:id="@+id/txt_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blue"
        android:textStyle="bold"
        android:textSize="10pt"
        app:layout_constraintTop_toTopOf="@id/txt_area"
        app:layout_constraintBottom_toBottomOf="@id/txt_rate"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="40px"
        android:layout_marginTop="30px"
        android:text="RM 500" />

</androidx.constraintlayout.widget.ConstraintLayout>